{
    "name": "NQDEV Block Tab Open",
    "version": "1.0",
    "description": "Ứng dụng sẽ chặn mở tabs từ một số trang như: hhpanda.tv, ...",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "scripting",
        "tabs",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}